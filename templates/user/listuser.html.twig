{% extends 'back.html.twig' %}
{% block body %}
<center>
<h2>liste des utilisateurs</h2>

<td><a href="{{ path('app_adduser') }}" >ajouter un utilisateur</a></td>

<br>
<br>

<table border="1">
    <tr>
        <th>id</th>
        <th>email</th>
        <th>password</th>
        <th>adresse</th>
        <th>roles</th>
        <th>modifier</th>
        <th>supprimer</th>

    </tr>
    <tr>
        {% for i in tabuser %}
        <td>{{ i.id}}</td>
        <td>{{ i.email}}</td>
        <td>{{ i.password}}</td>
        <td>{{ i.adresse}}</td>
        <td>{{ i.roles|json_encode  }}</td>




        <td><a href="{{ path('app_updateuser',{'id':i.id})}}" >modifier</a></td>
        <td><a href="{{ path('app_deleteuser',{'id':i.id})}}" >supprimer</a></td>
    </tr>
    {% endfor %}


</table>
</center>
{% endblock %}
